templ CommentReplyInfo(replyCount int, adminPfp string, commentID string) {
	if replyCount > 0 {
		<div id={ fmt.Sprintf("comment-reply-info-%s", commentID) } class="ml-12 mt-2 flex items-center text-sm text-blue-600 dark:text-blue-400 cursor-pointer">
			<button
				id={ fmt.Sprintf("more-replies-button-%s", commentID) }
				class="flex hover:bg-blue-200 dark:hover:bg-blue-800 space-x-2 rounded-xl p-2"
				onclick="toggleCommentReplies(this)"
				data-comment-id={ commentID }
				data-loaded="false"
			>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 flex-shrink-0 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
				</svg>
				if adminPfp != "" {
					<div class="flex space-x-2 items-center">
						<img
							src={ adminPfp }
							alt="admin avatar"
							class="w-4 h-4 rounded-full ring-2 ring-blue-600 dark:ring-blue-400"
						/>
						<span class="w-1.5 h-1.5 bg-gray-400 dark:bg-gray-500 rounded-full inline-block"></span>
					</div>
				}
				if replyCount == 1 {
					<span>{ fmt.Sprint(replyCount) } –æ–¥–≥–æ–≤–æ—Ä</span>
				} else {
					<span>{ fmt.Sprint(replyCount) } –æ–¥–≥–æ–≤–æ—Ä–∞</span>
				}
			</button>
		</div>
	}
	<script>
        function toggleCommentReplies(button) {
            const commentId = button.dataset.commentId;
            const repliesContainerId = `comment-replies-${commentId}`;
            const repliesContainer = document.getElementById(repliesContainerId);
            const svg = button.querySelector("svg");
            
            if (!repliesContainer || !svg) return;
            
            // Toggle arrow rotation
            svg.classList.toggle("rotate-180");
            
            // Track loaded state with data attribute instead of checking innerHTML
            const isLoaded = button.dataset.loaded === "true";
            
            if (!isLoaded) {
                // First time - load replies
                htmx.ajax('GET', `/api/comments/${commentId}/more-replies`, {
                    target: `#${repliesContainerId}`,
                    swap: 'innerHTML'
                });
                button.dataset.loaded = "true";
            } else {
                // Already loaded - clear content
                repliesContainer.innerHTML = "";
                button.dataset.loaded = "false";
            }
        }
    </script>
}

